extends layout

block page_name
  | Administration

block styles
  link(rel='stylesheet', href='/stylesheets/admin.css')

block scripts
  script(src='/javascripts/admin.js')

block content
  if !assistantAvailable
    h2.text-danger Your assistant is not yet configured.&#x20;
      a(href='/admin/assistant-setup') Configure it
      | .

  h2 Users

  div.modal.fade#modal-message-user
    div.modal-dialog
      div.modal-content
        form(method='post',data-toggle='validator')#form-message-user
          div.modal-header
            h4.modal-title Send a message
          div.modal-body
            input(type='hidden',name='_csrf',value=csrfToken)

            div.form-group
              label(for='message-body').control-label Message
              textarea(name='body',required=true).form-control#message-body

          div.modal-footer
            div.row
              div.col-md-6
                button(type='submit').btn.btn-primary.btn-block Send
              div.col-md-6
                button(type='button',data-dismiss='modal').btn.btn-default.btn-block Close

  div.row
    div.col-sm-2
      form(action='/admin/kill-all', method='post')
        input(type='hidden',name='_csrf',value=csrfToken)
        button(type='submit').btn.btn-danger.btn-block Kill all users

    div.col-sm-2
      form(action='/admin/blow-view-cache', method='post')
        input(type='hidden',name='_csrf',value=csrfToken)
        button(type='submit').btn.btn-default.btn-block Clear view cache

    div.col-sm-2
      button(type='button').btn.btn-default.btn-block#button-send-broadcast Broadcast message

  table.table#users-table
    thead
      tr
        th #
        th User name
        th Human name
        th Login methods
        th Roles
        th Apps
        th Assistant?
        th Engine?
        th(colspan=2) Actions
    tbody
      each user in users
        tr
          td
            span(title=user.cloud_id)= user.id
          td
            a(href='mailto:' + user.email)= user.username
          td= user.human_name
          td
            - var methods = [];
            - if (user.password !== null)
              - methods.push("Password");
            - if (user.facebook_id !== null)
              - methods.push("Facebook");
            - if (user.google_id !== null)
              - methods.push("Google")
            | #{methods.join(', ')}
          td
            if user.roles & 0x1
              span(title=user.developer_key) Site Admin
            else if user.developer_status >= 3
              span(title=user.developer_key) Admin
            else if user.developer_status >= 2
              span(title=user.developer_key) Trusted Dev
            else if user.developer_status >= 1
              span(title=user.developer_key) Developer
            else
              span(title=user.developer_key) User
          td
            a(href='/thingpedia/apps/by-owner/' + user.id) Apps
          td
            if user.assistant_feed_id !== null
              span.sr-only= user.assistant_feed_id
              span(aria-hidden='yes', title=user.assistant_feed_id) Yes
            else
              | No
          td
            if user.isRunning
              | Running
            else
              | Died
          td.dropdown
            button(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false', id='button-actions-' + user.id).btn.btn-default
              | Actions
              span.caret

            ul.dropdown-menu(aria-labelledby='button-actions-' + user.id).actions-dropdown
              li
                if user.isRunning
                  form(action='/admin/kill-user/' + user.id, method='post')
                    input(type='hidden',name='_csrf',value=csrfToken)
                    button(type='submit').btn.btn-danger.form-control Kill user
                else
                  form(action='/admin/start-user/' + user.id, method='post')
                    input(type='hidden',name='_csrf',value=csrfToken)
                    button(type='submit').btn.btn-success.form-control Start user
              li
                button(type='button',data-user-id=user.id,data-has-assistant=(user.assistant_feed_id !== null ? 1 : 0)).btn.btn-success.btn-block.button-send-message Send a message
              li
                if user.developer_status < 3
                  form(action='/admin/promote-user/' + user.id, method='post')
                    input(type='hidden',name='_csrf',value=csrfToken)
                    button(type='submit').btn.btn-success.form-control Promote user
                if user.developer_status > 0
                  form(action='/admin/demote-user/' + user.id, method='post')
                    input(type='hidden',name='_csrf',value=csrfToken)
                    button(type='submit').btn.btn-success.form-control Demote user
              li
                form(action='/admin/delete-user/' + user.id, method='post').form-delete-user
                  input(type='hidden',name='_csrf',value=csrfToken)
                  button(type='submit').btn.btn-danger.form-control Delete user

